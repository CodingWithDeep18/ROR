<h3>Product_name:<%= @product.product_name %></h3><br>
<h3>Price:<%= @product.price %></h3><br>
<h3>Discription:<%= @product.discription %></h3><br>


<ul>
  <li><%= link_to "Edit", edit_product_path(@product) %></li>
  <li><%= link_to "Destroy", product_path(@product), data: {
                    turbo_method: :delete,
                    turbo_confirm: "Are you sure?"
                  } %></li>
  <li><%= link_to "Add to cart", carts_add_to_cart_path(product_id: @product.id) %></li>

</ul>
